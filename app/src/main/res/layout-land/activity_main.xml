<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/botonCalcularr"
    android:background="#B29F8D"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:fontFamily="@font/moment"
            android:text="Calculador Areas" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="6"
            android:rowCount="3">

            <ImageButton
                android:id="@+id/imageButtonCuadrado"
                android:background="@null"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="actualizarVisibilidadEntrada"
                android:src="@mipmap/cuadradopruebados" />

            <ImageButton
                android:id="@+id/imageButtonRectangulo"
                android:layout_width="88dp"
                android:layout_height="86dp"
                android:background="#B29F8D"
                android:backgroundTint="#B29F8D"
                android:onClick="actualizarVisibilidadEntrada"
                android:src="@mipmap/rectanguloprueba" />

            <ImageButton
                android:id="@+id/imageButtonTriangulo"
                android:background="@null"
                android:layout_width="98dp"
                android:layout_height="85dp"
                android:onClick="actualizarVisibilidadEntrada"
                android:src="@mipmap/trianguloprueba" />

            <ImageButton
                android:id="@+id/imageButtonCirculo"
                android:background="@null"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:onClick="actualizarVisibilidadEntrada"
                android:src="@mipmap/circculooo" />

            <ImageButton
                android:id="@+id/imageButtonPentagono"
                android:background="@null"
                android:layout_width="91dp"
                android:layout_height="85dp"
                android:onClick="actualizarVisibilidadEntrada"
                android:src="@mipmap/pentagonoprueba" />

            <ImageButton
                android:id="@+id/imageButtonHexagono"
                android:background="@null"
                android:layout_width="92dp"
                android:layout_height="89dp"
                android:onClick="actualizarVisibilidadEntrada"
                android:src="@mipmap/hexagonoprueba" />
        </GridLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRadio"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/backgroove"
                android:text="Radio: " />

            <TextView
                android:id="@+id/textViewApotema"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/backgroove"
                android:text="Apotema: " />

            <TextView
                android:id="@+id/textViewLado"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/backgroove"
                android:text="Lado: " />

            <TextView
                android:id="@+id/textViewBase"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/backgroove"
                android:text="Base:" />

            <TextView
                android:id="@+id/textViewAltura"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/backgroove"
                android:text="Altura:" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/backgroove"
                android:text="El área de forma geométrica es:" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="5"
            android:orientation="horizontal"
            android:rowCount="4">

            <ImageButton
                android:id="@+id/imageButtonUNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/unoo" />

            <ImageButton
                android:id="@+id/imageButtonDOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="2"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/dooos" />

            <ImageButton
                android:id="@+id/imageButtonTRES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="3"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/treees" />

            <ImageButton
                android:id="@+id/imageButtonCUATRO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="4"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/cuatrooo" />

            <ImageButton
                android:id="@+id/imageButtonCINCO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="5"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/cincooo" />

            <ImageButton
                android:id="@+id/imageButtonSEIS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="6"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/seiiis" />

            <ImageButton
                android:id="@+id/imageButtonSIETE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="7"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/sieteee" />

            <ImageButton
                android:id="@+id/imageButtonOCHO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="8"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/ochooo" />

            <ImageButton
                android:id="@+id/imageButtonNUEVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="9"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/nueveee" />

            <ImageButton
                android:id="@+id/imageButtonCERO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="0"
                android:backgroundTint="#B29F8D"
                android:onClick="onNumero"
                android:src="@mipmap/cerooo" />
        </GridLayout>

        <ImageButton
            android:id="@+id/imageButtonCambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="listenerCambiar"
            app:srcCompat="@android:drawable/checkbox_on_background" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/botonBorrar"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:fontFamily="@font/roseta"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:background="@drawable/btn_color"
            android:text="Borrar" />

        <Button
            android:id="@+id/botonCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roseta"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:background="@drawable/btn_color"
            android:text="Calcular"
            android:onClick="calcularArea"/>
    </FrameLayout>
</LinearLayout>